@using TapestryWorld.Web.ViewModels.StitchedTapestry;

@model AddStitchedTapestryViewModel
@{
    ViewBag.Title = "Add Stitched Tapestry";
}

<h4>Add your own stitched tapestry to the gallery.</h4>

@using (Html.BeginForm("Add", "StitchedTapestry", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <br />
    @Html.EditorFor(m => m.CategoryId, new { ListItem = Model.Categories })
    @Html.EditorFor(m => m.UploadedImage)

    <div class="row">
        <div class="col-md-8 text-center">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

