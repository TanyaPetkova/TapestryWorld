@using TapestryWorld.Web.ViewModels.Home;

@model IList<TapestryMainViewModel>
@{
    ViewBag.Title = "Tapestries";
}

<h2>@ViewBag.Title</h2>

@foreach (var tapestry in Model)
{
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Action("GetTapestryImage", "Tapestry", new { tapestry.Id})" width="200" height="200" />
        </div>

        <div class="col-md-6">
            <h2>@tapestry.TapestryName</h2>
            <p>Price: @tapestry.TapestryPrice</p>
            <p>
                <a class="btn btn-primary" href="@Url.Action("Details", "Tapestry", new { tapestry.Id})">Details</a>
            </p>
        </div>
    </div>
    <br />
    <br />
}

@for (int i = 1; i <= ViewBag.Pages; i++)
{
    <a href="@Url.Action("All", new { id = i })">@i</a>
}
