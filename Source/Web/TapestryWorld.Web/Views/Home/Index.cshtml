@using TapestryWorld.Web.ViewModels.Home;

@model IList<TapestryMainViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h1 class="text-center">Welcome to Tapestry World !</h1>

    <div class="row">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var tapestry = Model.ElementAt(i);
            <div class="col-md-4">
                <h2>@tapestry.TapestryName</h2>
                <p>Category: @tapestry.CategoryName</p>
                <img src="@Url.Action("GetImage", "Tapestry", new { tapestry.Id})" width="200" height="200" />
                <br />
                <br />
                <p>
                    <a class="btn btn-default" href="/Tapestry/Details/@tapestry.Id">Price: @tapestry.TapestryPrice</a>
                </p>
            </div>
        }
    </div>
</div>
